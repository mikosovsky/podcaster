# Example environment variables for Podcaster
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for GPT models - used for LLM script generation)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models - alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API Key (for high-quality TTS audio generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud credentials path (for Google TTS services)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# Application Settings
PODCASTER_CONFIG_PATH=./config/default.yaml
PODCASTER_DATA_DIR=./data
PODCASTER_LOG_LEVEL=INFO
